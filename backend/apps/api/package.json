{
  "name": "@twinkle/api",
  "version": "1.0.0",
  "private": true,
  "description": "REST API for Twinkle Protocol",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@twinkle/shared": "workspace:*",
    "hono": "^4.6.0",
    "@hono/node-server": "^1.13.0",
    "viem": "^2.21.0",
    "zod": "^3.25.0",
    "postgres": "^3.4.0",
    "openai": "^4.75.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tsx": "^4.19.0",
    "tsup": "^8.0.0",
    "@types/node": "^20.0.0"
  }
}
