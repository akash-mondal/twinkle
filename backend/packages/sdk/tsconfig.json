{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "emitDeclarationOnly": false,
        "module": "esnext",
        "target": "es2020",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ]
}