# Twinkle Backend - Production Environment Variables
# Copy to .env.prod and fill in your values

# Domain for SSL (leave empty for localhost/IP only)
DOMAIN=api.yourdomain.com

# PostgreSQL
POSTGRES_USER=twinkle
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=twinkle

# Blockchain RPC (Alchemy/Infura Sepolia endpoint)
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
PONDER_RPC_URL_11155111=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Facilitator wallet (for settling x402 payments)
FACILITATOR_PRIVATE_KEY=0x...your_private_key...

# Indexer start block (optional, defaults to 10016000)
START_BLOCK=10016000
