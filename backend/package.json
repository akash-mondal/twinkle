{
  "name": "twinkle-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Twinkle Protocol Backend - Event indexing, x402 facilitator, MCP server, and APIs",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "indexer:dev": "pnpm --filter @twinkle/indexer dev",
    "api:dev": "pnpm --filter @twinkle/api dev",
    "facilitator:dev": "pnpm --filter @twinkle/facilitator dev",
    "mcp:dev": "pnpm --filter @twinkle/mcp-server dev",
    "worker:dev": "pnpm --filter @twinkle/worker dev",
    "test:e2e": "./scripts/test-e2e.sh",
    "test:api": "./scripts/test-api.sh",
    "test:x402": "npx tsx scripts/test-x402-settle.ts",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.19.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.209.0",
    "@opentelemetry/resources": "^2.3.0",
    "@opentelemetry/sdk-node": "^0.209.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@sentry/node": "^10.32.1",
    "bullmq": "^5.66.4",
    "ioredis": "^5.9.1",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3"
  }
}
